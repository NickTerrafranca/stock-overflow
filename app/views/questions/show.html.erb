<p>
  <strong>Title</strong><br>
  <%= @question.title %><br>

  <strong>Description</strong><br>
  <%= @question.description %><br>

  <% unless @question.answers.empty? %>

    <% @question.answers.order('updated_at ASC').each do |q| %>
    <br><strong>Answer</strong><br>
      <%= q.answer_body %>
    <%end%>
  <%end%>
</p>

<h2>Answer this question</h2>
<%= form_for [@question, @answer] do |f| %>
  <%= f.label :answer_body %><br>
  <%= f.text_area :answer_body %><br>
  <%= f.submit %>
<%end%>

<br><%= link_to "Back to all Questions", questions_path %>
